<resources>

    <style name="MainTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/background_app</item>
        <item name="android:windowBackground">@color/background_app</item>
        <item name="android:navigationBarColor">@color/background_app</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:colorControlActivated">@color/button_enabled</item>
        <item name="android:colorControlNormal">@color/color_normal</item>
        <item name="android:colorSecondary">@color/main</item>
        <item name="android:colorButtonNormal">@color/main</item>
        <item name="android:colorPrimaryDark">@color/main</item>
        <item name="android:colorControlHighlight">@color/main</item>
        <item name="android:colorAccent">@color/main</item>
    </style>

    <style name="DialogTheme" parent="android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>